
@{
    ViewData["Title"] = "UpdateAppointment";
}

<h1>UpdateAppointment</h1>

@model PillarTechBabysittingKata.Models.Appointments
@*Would like to make it so that the previous values are saved so that the user only has to edit the field they want to edit*@
<form asp-action="CreateAppointment" method="post">
    Family:
    A: <input type="radio" name="FamilyId" value="A" required />
    B: <input type="radio" name="FamilyId" value="B" />
    C: <input type="radio" name="FamilyId" value="C" />
    <br>
    Date: <input type="date" name="StartDate" placeholder="@Model.StartDate" required />
    Starting time:
    <select name="StartTime" placeholder="@Model.StartTime"  required>
        <option value="05:00:00">5PM</option>
        <option value="06:00:00">6PM</option>
        <option value="07:00:00">7PM</option>
        <option value="08:00:00">8PM</option>
        <option value="09:00:00">9PM</option>
        <option value="10:00:00">10PM</option>
        <option value="11:00:00">11PM</option>
        <option value="12:00:00">12PM</option>
        <option value="01:00:00">1AM</option>
        <option value="02:00:00">2AM</option>
        <option value="03:00:00">3AM</option>
    </select>
    Ending Time:
    <select name="EndTime" min="StartTime" placeholder="@Model.EndTime"  required>
        <option value="06:00:00">6PM</option>
        <option value="07:00:00">7PM</option>
        <option value="08:00:00">8PM</option>
        <option value="09:00:00">9PM</option>
        <option value="10:00:00">10PM</option>
        <option value="11:00:00">11PM</option>
        <option value="12:00:00">12PM</option>
        <option value="01:00:00">1AM</option>
        <option value="02:00:00">2AM</option>
        <option value="03:00:00">3AM</option>
        <option value="04:00:00">4AM</option>
    </select>
    <input type="submit" value="Update appointment" />
</form>